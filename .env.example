# Twilio Configuration for WhatsApp
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Optional: Override default Twilio sandbox number with your own WhatsApp Business number
# TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# SMTP Configuration for Email Invitations
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_USE_TLS=True

# Web Domain for Email Links
WEBDOMAIN=localhost:3000

# JWT Token Configuration (Optional)
# Access token expiration in minutes (default: 1440 = 24 hours)
# ACCESS_TOKEN_EXPIRE_MINUTES=1440
# Refresh token expiration in days (default: 30 days)
# REFRESH_TOKEN_EXPIRE_DAYS=30

# Expo Token
EXPO_TOKEN=your_expo_token_here

# Storage Secret for File Upload
STORAGE_SECRET=your_storage_secret_here

# Google Services JSON for Firebase (Mobile App)
# Path to google-services.json file for Android Firebase configuration
# Default: ./google-services.json
GOOGLE_SERVICES_JSON=./google-services.json

# External AI Service Configuration
# Note: Service URLs and access tokens are managed via the database
# using the /api/admin/service-tokens API endpoint

# WhatsApp Template Configuration
WHATSAPP_CONFIRMATION_TEMPLATE_SID=your_whatsapp_confirmation_template_sid_here
WHATSAPP_RECONNECTION_TEMPLATE_SID=your_whatsapp_reconnection_template_sid_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here